			</tr>
<%
			Counter = Counter + 1
		ors.MoveNext
	Loop
	ors.Close
%>
			</table>
		</td>
		<td>
			<div id="datepickerRecoveryGroupSessions" name="datepickerRecoveryGroupSessions"></div>
			<!-- <%= formTextBox("datepickerRecoveryGroupSessions", "5", MinDate, "RecoveryTheme", "Group Sessions", "Invalid Group Sessions") %> -->
